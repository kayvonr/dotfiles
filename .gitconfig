[core]
    pager = less -+$LESS -R
	excludesfile = ~/.gitignore_global
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci - %cr) %C(blue)<%an>%Creset' --abbrev-commit
    st = status
    co = checkout
    bdiff = log --graph --left-right --cherry-pick --oneline
    pom = push origin HEAD
[color]
    ui = auto
[user]
	name = NAME
	email = EMAIL
